{
  "version": "2.0.0",
  "command": "npm",
  "args": [
    "run"
  ],
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "silent",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "tasks": [
    {
      "label": "compile",
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "lint",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}